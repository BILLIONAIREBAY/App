{
  "cli": {
    "version": ">= 3.14.0",
    "requireCommit": false,
    "appVersionSource": "local"
  },
  "build": {
    "base": {
      "node": "20.10.0",
      "android": {
        "image": "sdk-54"
      },
      "ios": {
        "image": "latest",
        "resourceClass": "large"
      }
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "ENVIRONMENT": "development",
        "API_URL": "https://bbay-backend-worker.ceo-dc1.workers.dev"
      },
      "ios": {
        "simulator": true
      }
    },
    "staging": {
      "extends": "base",
      "distribution": "internal",
      "env": {
        "ENVIRONMENT": "staging"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "extends": "base",
      "env": {
        "ENVIRONMENT": "production"
      },
      "ios": {
        "buildConfiguration": "Release"
      },
      "android": {
        "buildType": "app-bundle"
      }
    }
  }
}
